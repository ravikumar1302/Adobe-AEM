// Automatiion of Saving of Adobe AEM from this Private repo to Public AEM with a VS Code Task or Script
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Push AEM to Public Repo",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "git subtree split --prefix='6 Adobe AEM' -b aem-temp-branch; git push aem-origin aem-temp-branch:main --force; git branch -D aem-temp-branch"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Force-pushes Adobe AEM folder to public GitHub repo using subtree split"
        }
    ]
}
